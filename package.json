{
  "name": "@defra/cdp-libraries",
  "description": "A monolith to hold shared npm libraries",
  "version": "0.1.0",
  "homepage": "https://github.com/DEFRA/cdp-libraries#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DEFRA/cdp-libraries.git"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "type": "module",
  "main": "index.js",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{cjs,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,json,md}\"",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "lint": "eslint --cache --cache-strategy content \"**/*.{cjs,js}\"",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "npm run setup:husky",
    "release": "release-it --ci",
    "release-it": "release-it --release-version",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "test": "npm run test -ws"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "4.2.0",
    "eslint": "^9.28.0",
    "husky": "9.1.7",
    "neostandard": "^0.12.1",
    "prettier": "^3.5.3",
    "release-it": "17.11.0",
    "vitest": "^3.2.3"
  },
  "release-it": {
    "increment": "minor",
    "plugins": {
      "@release-it-plugins/workspaces": true
    },
    "npm": {
      "version": true,
      "publish": false
    },
    "github": {
      "release": true
    }
  }
}
