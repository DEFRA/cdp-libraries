{
  "name": "@defra/catbox-dynamodb",
  "version": "0.3.0",
  "description": "A hapi plugin for providing a hapi/catbox dynamodb engine",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "homepage": "https://github.com/DEFRA/cdp-libraries/tree/main/packages/catbox-dynamodb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DEFRA/cdp-libraries.git"
  },
  "bugs": {
    "url": "https://github.com/DEFRA/cdp-libraries/issues"
  },
  "keywords": [
    "hapi",
    "defra",
    "catbox",
    "dynamodb"
  ],
  "main": "src/dynamodb.js",
  "exports": {
    ".": "./src/dynamodb.js"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{cjs,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,json,md}\"",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "github:release": "npx cdp-github-release catbox-dynamodb",
    "lint": "eslint --cache --cache-strategy content \"**/*.{cjs,js}\"",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "npm run setup:husky",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@hapi/hapi": "21.3.12"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "Released catbox-dynamodb ${version}",
      "releaseNotes": "echo ''"
    },
    "git": {
      "commitMessage": "Tagged catbox-dynamodb ${version}",
      "tagName": "catbox-dynamodb-${version}",
      "requireCleanWorkingDir": false,
      "commitArgs": [
        "--no-verify"
      ]
    }
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.895.0",
    "@aws-sdk/util-dynamodb": "3.864.0",
    "@hapi/boom": "10.0.1"
  }
}
